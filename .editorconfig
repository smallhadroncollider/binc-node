# EditorConfig - http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.txt]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.make]
indent_style = tab
